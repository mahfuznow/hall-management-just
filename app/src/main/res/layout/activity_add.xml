<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="@drawable/semi_round"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_icon"
        app:civ_border_color="#00000000"
        app:civ_border_width="2dp">
    </de.hdodenhof.circleimageview.CircleImageView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:fontFamily="@font/regular"
                />



            <EditText
                android:id="@+id/name"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/dept"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Department : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/roll"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Roll : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/session"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Session : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/reg"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Resigtration No : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/dob"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date Of Birth : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/bg"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Blood Group : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/gender"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/phone"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/email"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />













            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hall Information"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:fontFamily="@font/regular"
                />



            <EditText
                android:id="@+id/hName"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/hStatus"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Status : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/room"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room No : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/enrollment"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enrollment Date : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />









            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permanent Address"
                android:textColor="#2196F3"
                android:textSize="18sp"
                android:fontFamily="@font/regular"
                />



            <EditText
                android:id="@+id/fName"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Father's Name : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/mName"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mother's Name : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/address"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />
            <EditText
                android:id="@+id/emergancy"
                android:background="@drawable/semi_round"
                android:backgroundTint="#E9DA55"
                android:padding="10dp"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Emergency contact : "
                android:textColor="#000"
                android:fontFamily="@font/regular"
                />

            <Button
                android:id="@+id/add"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textAllCaps="false"
                android:background="@drawable/round_white"
                android:backgroundTint="#FF5722"
                android:layout_gravity="center"
                />



        </LinearLayout>
    </ScrollView>






</LinearLayout>
